{
  "name": "jest-helpers",
  "version": "1.1.12",
  "description": "TypeScript helper functions for Jest to help make your tests resilient to refactoring.",
  "main": "index.js",
  "engines": {
    "node": ">=8.10"
  },
  "private": true,
  "scripts": {
    "check": "npm run lint && npm run build && npm run test",
    "clean": "rimraf ./dist",
    "commit": "commit",
    "prebuild": "npm run clean",
    "build": "tsc -p ./tsconfig.main.json",
    "lint": "tslint -p ./tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "postbuild": "npm run package",
    "package": "ts-node --project ./tsconfig.package.json --files ./support/package.ts",
    "prerelease": "npm run package",
    "release": "git checkout master && git pull origin master && standard-version",
    "ship-it": "git push --follow-tags origin master && cd ./dist && npm publish",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeandcats/jest-helpers.git"
  },
  "keywords": [
    "jest",
    "helper",
    "helpers",
    "describe",
    "mock",
    "partial"
  ],
  "author": "Ben <codeandcats@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codeandcats/jest-helpers/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "homepage": "https://github.com/codeandcats/jest-helpers#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/prompt-cli": "^7.1.2",
    "@types/callsite": "^1.0.30",
    "@types/jest": "^23.3.3",
    "@types/node": "^10.11.4",
    "husky": "^1.1.0",
    "jest": "^23.6.0",
    "rimraf": "^2.6.2",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.10.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1"
  },
  "dependencies": {
    "callsite": "^1.0.0",
    "resolve-app-path": "^1.0.2"
  }
}
